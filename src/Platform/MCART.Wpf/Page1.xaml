<Page x:Class="TheXDS.MCART.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TheXDS.MCART"
      xmlns:controls="clr-namespace:TheXDS.MCART.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">
    <Grid>
        <TextBlock Text="{Binding SelectedIndex, ElementName=sel1}"/>
        <controls:SelectorPanel
            SelectedIndex="1"
            x:Name="sel1" 
            VerticalAlignment="Center"
            HorizontalAlignment="Center">
            <controls:BusyIndicator Stroke="Red"/>
            <controls:ProgressRing Value="65" IsIndeterminate="False">
                
            </controls:ProgressRing>
            <Ellipse Fill="Blue"/>
        </controls:SelectorPanel>
    </Grid>
</Page>
