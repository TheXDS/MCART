<UserControl
    x:Class="TheXDS.MCART.Controls.RingGraph"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d" 
    d:DesignHeight="300" d:DesignWidth="400">
    <DockPanel x:Name="grdSuper">
        <TextBlock x:Name="txtTitle" Margin="10" DockPanel.Dock="Top" HorizontalAlignment="Center"/>
        <TreeView VerticalAlignment="Center" Background="{x:Null}" BorderBrush="{x:Null}" x:Name="pnlLabels"/>
        <Viewbox Margin="10">
            <Grid Height="{Binding ActualWidth, Mode=OneWay, RelativeSource={RelativeSource Self}}">
                <Grid x:Name="grdRoot"/>
                <Viewbox x:Name="vbxTotal" Margin="100">
                    <TextBlock x:Name="txtTotal" FontSize="100"/>
                </Viewbox>
            </Grid>
        </Viewbox>
    </DockPanel>
</UserControl>
